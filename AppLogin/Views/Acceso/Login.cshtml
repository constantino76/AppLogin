    <body>
      <div class=" row mt-4 justify-content-center rounded  pt-5">
          <div class="col-sm-4">
   <div class="card  bg-dark">
    <div class="card-header text-center   text-black" style="font-size:4rem">

                    <i class="bi bi-person-circle login-icon"></i>
                    <h4 class="mt-3">Login</h4>
                    </div>
    <div class="card-body">
      

        <form  asp-controller="Acceso"  asp-action="Login" method="post">
            <div class="input-group mb-3">
                            <div class="input-group-text" style="border:none">
                                <span><i class="bi bi-envelope-fill text-primary"></i></span>
                            </div>
                <input type="email" name="Correo" class="form-control" placeholder="Email">
                
            </div>
            <div class="input-group mb-3">
                            <div class="input-group-text">
                                <span>
                                    <i class="bi bi-lock-fill text-danger"></i>
                                </span>
                            </div>
                        <input type="password" name="Clave" class="form-control" placeholder="Password">
               
            </div>
            <hr>
            <div class="row">
                <!-- /.col -->
                <div class="col-12">
                    <button type="submit" class="btn btn-primary btn-block">Ingresar</button>
                </div>
                <!-- /.col -->
            </div>
        </form>

    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->
    </div>
        @{
            if (ViewBag.Mensaje != null)

            {

                <div class=" d-flex  text-danger mt-2 text-center alert-info">Usuario no encontrado</div>


            }
        }

</div> 


</body>
