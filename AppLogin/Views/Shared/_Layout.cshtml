
@using Microsoft.AspNetCore.Identity;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppLogin</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/AppLogin.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <div class="container-fluid">
        <!-- Header fijo superior -->
        <header class="navbar navbar-expand-lg navbar-light bg-dark text-white sticky-top">
            <div class="container-fluid">
                <a class="navbar-brand text-white" href="#">Hotel La Fortuna</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMenu" aria-controls="navbarMenu" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMenu">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.IsInRole("Administrador") || User.IsInRole("Tecnico"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Usuarios" asp-action="Index">Listar Usuarios</a>
                            </li>
                        }
                        @if (User.IsInRole("Administrador"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Usuarios" asp-action="Registro">Agregar Usuario</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Acceso" asp-action="Logout">Salir</a>
                        </li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Contenido principal con sidebar derecho -->
        <div class="row mt-1">
            <!-- Contenido principal -->
            <!-- Main content -->
            <main class="col-12 col-md-9 col-lg-10 ms-sm-auto px-md-4">
                @RenderBody()
            </main>

            <!-- Sidebar derecho -->
            <aside class="col-12 col-md-3 col-lg-2 d-md-block  bg-dark text-white p-3">
                <h5>Opciones</h5>
                <button class="navbar-toggler btn btn-secondary w-50 mb-3 text-white" type="button" data-bs-toggle="collapse" data-bs-target="#menuLateral" aria-expanded="false" aria-controls="menuLateral">

                    <span><i class="bi bi-justify"></i></span>
                </button>
                <div class="collapse show" id="menuLateral">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Products</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="#">Customers</a>
                        </li>
                    </ul>

                </div>
               
            </aside>
        </div>
    </div>
    
   
    <br />
    <br />
    <br />
    <br />
    <div class="d-flex flex-column mt-4">
        <footer class="border-bottom border-danger footer text-muted mt-2 pt-4">
            <div class="container text-danger text-capitalize text-center">
                &copy; 2024 - AppLogin - <a asp-area="" asp-controller="Home" asp-action="Ventas ">Privacy</a>
            </div>
        </footer>


    </div>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



<style>
      .sidebar {
    top: 0; /* Fijo en la parte superior */
    bottom: 0;
    width: 200px; /* Ancho del sidebar */
    height: 100%;
    z-index: 1000;
    padding-top: 20px; /* Espaciado interior para los links */
}

.sidebar .nav-link {
    margin: 5px 0; /* Espaciado entre elementos */
    padding: 10px; /* Espaciado interno para hacer clic fácilmente */
    font-size: 16px;
}

.main-content {
    padding: 20px;
}

.navbar {
    background-color: #AFEEEE;
}



    .main-content {
        margin-left: 0; /* Sin margen cuando el sidebar está oculto */
        padding: 2px; /* Ajustar el padding para pantallas pequeñas */
 
    }
}
</style>